{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "declaration": true,
    "pretty": true,
    "outDir": "dist",
    "importHelpers": true,
    "noEmitHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["@types/jest", "node"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules/*/**", "example/*/**"]
}
